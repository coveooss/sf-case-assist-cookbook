<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Confirmation End Screen</masterLabel>

    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
                name="heading"
                label="Heading"
                role="inputOnly"
                type="String"
                default="Case successfully submitted"
            />
            <property
                name="subText"
                label="Sub Text"
                role="inputOnly"
                type="String"
                default="An agent will be in touch with you soon"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
