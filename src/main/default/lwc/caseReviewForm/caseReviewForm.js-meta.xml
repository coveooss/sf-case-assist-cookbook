<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Case Review Screen</masterLabel>

    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property
                name="heading"
                label="Heading"
                role="inputOnly"
                type="String"
                default="Please review your case before submission"
            />
            <property
                name="subHeading"
                label="Heading of the sub-section"
                role="inputOnly"
                type="String"
                default="Select related categories"
            />
            <property
                name="caseData"
                label="Data from the case"
                role="inputOnly"
                type="String"
            />
            <property
                name="recordId"
                label="Record Id for the created Case"
                role="outputOnly"
                type="String"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
